<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
	<persistence-unit name="my-hibernate-jpa">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- Hibernate scanning discovers all entities if not set this: -->
		<!--<class>com.beginner.jpa.Actorr</class>-->
		<!--<exclude-unlisted-classes>true</exclude-unlisted-classes>-->

		<properties>
			<!-- postgres -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/bcsystem"/>

			<!-- mysql
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bcsystem"/>
			 -->

			<!-- connection user and password -->
			<property name="javax.persistence.jdbc.user" value="bcsystem"/>
			<property name="javax.persistence.jdbc.password" value="bcsystem"/>

			<!-- jap2.1 standard: Standardized schema generation and data loading
				http://www.thoughts-on-java.org/standardized-schema-generation-data-loading-jpa-2-1
				none, create, drop-and-create, drop
			-->
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="javax.persistence.schema-generation.scripts.create-target" value="./create.sql"/>


			<!-- hibernate -->
			<property name="hibernate.connection.pool_size" value="5"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<!-- http://xujunxiong.iteye.com/blog/2178878
				create-drop : drop > create > drop
				create      : drop > create
				update      : 表不存在才 create
				validate    : 表不存在就报错
			-->
			<!--<property name="hibernate.hbm2ddl.auto" value="create"/>-->
			<!--<property name="hibernate.connection.username" value="bcsystem"/>-->
			<!--<property name="hibernate.connection.password" value="bcsystem"/>-->
		</properties>
	</persistence-unit>
</persistence>